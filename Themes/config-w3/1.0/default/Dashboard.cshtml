@inherits RocketSystemProjectTemplate.Components.RocketSystemProjectTemplateTokens<Simplisity.SimplisityRazor>
@using DNNrocketAPI.Components;
@using Simplisity;
@using RazorEngine.Text;
@using RocketPortal.Components;
@using RocketSystemProjectTemplate.Components

@{
    var portalContent = (PortalContentLimpet)Model.List.First();
    var systemData = new SystemLimpet("rocketcontent");
    var appThemeSystem = new AppThemeSystemLimpet(systemData.SystemKey);
    var portalData = new PortalLimpet(PortalUtils.GetCurrentPortalId());
}

@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/api/App_LocalResources/")
@AddProcessData("resourcepath", "/DesktopModules/DNNrocket/AppThemes/App_LocalResources/")
@AddProcessData("resourcepath", "/DesktopModules/DNNrocketModules/" + systemData.SystemKey + "/App_LocalResources/")

@RenderLanguageSelector("rocketsystemprojecttemplate_admin", "", appThemeSystem, Model)

<div style="padding-top:48px;">

    <div class="w3-row-padding w3-margin-bottom w3-animate-opacity">

        <div class="w3-row w3-margin">
            <i>@ResourceKey("RP.securitycode", "", "Help")</i>
            <br />
            <div class="w3-button" onclick="docopyclipboard($('#secretcode'))"><b>@ResourceKey("RP.securitycode")</b>&nbsp;<span id="iconsecretcode" class=" action-clipboardicon">@ButtonIcon(ButtonTypes.copy)</span></div>
            <div id="secretcode" class="w3-padding w3-light-grey w3-border" style="width:100%;word-wrap:break-word;">@(portalData.RemoteBase64Params())</div>
        </div>

    </div>

</div>


    <script type="text/javascript">

        $(document).ready(function () {

        });

        function docopyclipboard(element) {
            rctadmin.CopyTextToClipboard(element);
        }

    </script>

